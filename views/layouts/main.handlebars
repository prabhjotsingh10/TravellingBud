const login_validation= () =>{
  
  let email=document.getElementById('email');
  let pass=document.getElementById('pass');

  if(email.value =='')
  {
    document.getElementById('emailError').innerHTML = "<sup> * </sup>Email Cannot be left blank";
  }

   if(pass.value =='')
  {
    document.getElementById('passwordError').innerHTML = "<sup> * </sup>Password Cannot be left blank";
  }

  //if(pass.value.length <= 6){
    //document.getElementById('passwordError').innerHTML = "<sup> * </sup>Password Cannot be less than 6 letters";
  //}

}


