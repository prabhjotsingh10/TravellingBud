  <script type="text/javascript">
     const toggleModal= () =>{
       document.querySelector('.modal').classList.toggle('modal_hidden');
   }

   document.querySelector(".user_login").addEventListener('click',toggleModal);

   document.querySelector('#learn_more').addEventListener('submit',(event)=>{
       event.preventDefault();
       toggleModal();
   })
   document.querySelector(".modal_close_bar").addEventListener('click', toggleModal);

//User registration modal pop up

   const toggleUserRegModal = () =>{
     document.querySelector('.usr_rg').classList.toggle('usr_rg_hddn');
   }

   document.querySelector('.user_registration').addEventListener('click', toggleUserRegModal);

   document.querySelector(".modal_close_bar_new").addEventListener('click', toggleUserRegModal);

